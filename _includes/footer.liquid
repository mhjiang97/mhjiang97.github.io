<script src="{{ '/assets/js/puv2.js' }}"></script>

{% capture footer_contents %}
  &copy; Copyright {{ site.time | date: '%Y' }} {{ site.first_name }} {{ site.middle_name }} {{ site.last_name }}. {{ site.footer_text }}
  {%- if site.impressum_path -%}
  <a href="{{ site.url }}{{ site.baseurl }}{{ site.impressum_path }}">Impressum</a>.
  {%- endif -%}
  {%- if site.last_updated -%}
  Last updated: {{ "now" | date: '%B %d, %Y' }}.
  {%- endif -%}
{% endcapture %}

{% capture analytics_content %}
  Page views: <span id="vercount_value_page_pv" class="mycontainer">Loading</span> | Visits: <span id="vercount_value_site_pv" class="mycontainer">Loading</span> | Visitors: <span id="vercount_value_site_uv" class="mycontainer">Loading</span>
{% endcapture %}

{% if site.footer_fixed %}
  <footer class="fixed-bottom" role="contentinfo">
    <div class="container mt-0">
      {{ footer_contents }}
      {{ analytics_content }}
    </div>
  </footer>
{% else %}
  <footer class="sticky-bottom mt-5" role="contentinfo">
    {% if site.newsletter.enabled %}
      {% include newsletter.liquid %}
    {% endif %}
    <div class="container">
      {{ footer_contents }}
      {{ analytics_content }}
    </div>
  </footer>
{% endif %}
